<h1 align="center">Edit category</h1>

<%= render 'form' %>
<div class="container">
  <hr class="col-sm-4 offset-sm-4">
  <div class="form-group row">

    <div class="col-sm-4 offset-sm-4 ">
      <%= link_to "Delete", category_path(@category), method: :delete,
                  data: {confirm: "Are you sure to delete #{@category.name}?"},
                  class: "btn btn-danger btn-sm float-right btn-block" %>
    </div>
  </div>
</div>
