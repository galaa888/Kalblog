<h1 align="center">Create new category </h1>

<div class="container">
  <%= render 'shared/errors', obj: @category %>
      <%= form_for @category do |f| %>
      <div class="form-group row">
        <div class="col-sm-4 offset-sm-4">
          <%= f.text_field :name, class: "form-control userReg", placeholder: "Category name", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-4 col-sm-4">
          <%= f.submit class: 'btn btn-primary btn-block btn-lg' %>
        </div>
      </div>

      <% end %>
      <div class="col-sm-4 offset-sm-4">
       [<%= link_to "Cancel request and return to posts", categories_path %>]
      </div>
</div>
