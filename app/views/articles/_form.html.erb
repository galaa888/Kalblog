<div class="container">
  <%= render 'shared/errors', obj: @article %>

  <div class="row">
    <div class="col-sm-12">
      <%= form_for @article do |f| %>
      <div class="form-group row">
        <div class="form-control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, id: "articleTitle", class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="form-control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, id: "articleDescription", class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit class: 'btn btn-outline-primary btn-lg' %>
        </div>
      </div>

      <% end %>
      <div class="col-sm-4 offset-sm-2">
       [<%= link_to "Cancel request and return to posts", articles_path %>]
      </div>
    </div>
  </div>
</div>
