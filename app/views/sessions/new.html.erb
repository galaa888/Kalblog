<% provide(:title, "Log in") %>
<h1 align="center">Log in </h1>

  <%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group row">
    <div class="col-sm-4 offset-sm-4">
      <%= f.email_field :email, class: "form-control userReg", placeholder: "Username", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-4 offset-sm-4 article-body">
      <%= f.password_field :password, class: "form-control userReg", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-4 col-sm-4">
      <%= f.submit("Log in", class: 'btn btn-primary btn-block btn-lg') %>
    </div>
  </div>

  <% end %>
  <div class="col-sm-4 offset-sm-4">
   [<%= link_to "Cancel request and return to posts", articles_path %>]
  </div>
