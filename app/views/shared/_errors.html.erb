<% if obj.errors.any? %>
  <div class="row errors-block">
    <div class="col-sm-8 offset-sm-2">
      <div class="card card-outline-danger text-danger">
        <div class="card-block">
          <h4 class="card-title">
            <%= pluralize(obj.errors.count, "error") %>
            prohibited this article from being saved:
          </h4>
          <div class="card-text">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
<% end %>
